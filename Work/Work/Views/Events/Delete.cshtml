@model Work.Models.Event

@{
    ViewBag.Title = "Мероприятия";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="user-create">
    <span>Удаление мероприятия</span>
    <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name) : <span>@Html.DisplayFor(model => model.Name)</span>
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Category) : <span>@Html.DisplayFor(model => model.Category)</span>
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.DateStart) : <span>@Html.DisplayFor(model => model.DateStart)</span>
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.DateFinish) : <span>@Html.DisplayFor(model => model.DateFinish)</span>
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Location) : <span>@Html.DisplayFor(model => model.Location)</span>
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.CountUsers) : <span>@Html.DisplayFor(model => model.CountUsers)</span>
            </dt>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit">Удалить</button> |
                @Html.ActionLink("Вернуться к списку", "Index")
            </div>
        }
</div>